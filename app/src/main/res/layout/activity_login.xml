<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andreea.healthmonitoring.Activities.LoginActivity"
    tools:weightSum="1"
    android:gravity="center">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="425dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="241dp"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/ic_account_circle"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="115dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/imageView25"
        android:layout_alignRight="@+id/checkBoxRememberMe"
        android:layout_alignEnd="@+id/checkBoxRememberMe"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="241dp"
        android:layout_height="44dp"
        android:layout_alignLeft="@+id/editTextUsername"
        android:layout_alignStart="@+id/editTextUsername"
        android:layout_below="@+id/editTextUsername"
        android:layout_marginTop="18dp"
        android:drawableLeft="@drawable/ic_lock_password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="180dp"
        android:layout_weight="1"/>

    <CheckBox
        android:id="@+id/checkBoxRememberMe"
        android:layout_width="243dp"
        android:layout_height="39dp"
        android:layout_below="@+id/editTextPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Remember me"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="245dp"
        android:layout_weight="1"/>

    <android.support.v7.widget.CardView
        android:id="@+id/buttonSignIn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_below="@+id/checkBoxRememberMe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/textViewSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="SIGN IN"
                android:textColor="@color/cardview_light_background"
                android:textSize="14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardSignUp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/colorForButton"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/buttonSignIn"
        android:layout_alignLeft="@+id/buttonSignIn"
        android:layout_alignStart="@+id/buttonSignIn"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="SIGN UP"
                android:textColor="@color/cardview_light_background" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="120dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo_health"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_weight="1"/>

</RelativeLayout>