<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andreea.healthmonitoring.Activities.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cardViewUpdate"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/cardViewUpdate"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="17dp"
                android:text="First Name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextFirstName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewFirstName"
                android:layout_alignStart="@+id/textViewFirstName"
                android:layout_below="@+id/textViewFirstName"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="First Name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textViewFirstName"
                android:layout_alignRight="@+id/textViewFirstName"
                android:layout_below="@+id/editTextFirstName"
                android:layout_marginTop="9dp"
                android:text="Last Name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextLastName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewLastName"
                android:layout_alignStart="@+id/textViewLastName"
                android:layout_below="@+id/textViewLastName"
                android:layout_centerHorizontal="false"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Last Name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editTextEmail"
                android:layout_alignStart="@+id/editTextEmail"
                android:layout_below="@+id/editTextLastName"
                android:layout_marginTop="9dp"
                android:text="Email"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editTextLastName"
                android:layout_alignStart="@+id/editTextLastName"
                android:layout_below="@+id/textViewEmail"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Email"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewContactNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editTextEmail"
                android:layout_alignStart="@+id/editTextEmail"
                android:layout_below="@+id/editTextEmail"
                android:layout_marginTop="9dp"
                android:text="Contact No"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextContactNo"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewContactNo"
                android:layout_alignStart="@+id/textViewContactNo"
                android:layout_below="@+id/textViewContactNo"
                android:layout_centerHorizontal="false"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Contact No"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editTextContactNo"
                android:layout_alignStart="@+id/editTextContactNo"
                android:layout_below="@+id/editTextContactNo"
                android:layout_marginTop="9dp"
                android:text="Age"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextAge"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewAge"
                android:layout_alignStart="@+id/textViewAge"
                android:layout_below="@+id/textViewAge"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Age"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editTextAge"
                android:layout_alignStart="@+id/editTextAge"
                android:layout_below="@+id/editTextAge"
                android:layout_marginTop="9dp"
                android:text="Height(cm)"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextHeight"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewHeight"
                android:layout_alignStart="@+id/textViewHeight"
                android:layout_below="@+id/textViewHeight"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Height"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textViewHeight"
                android:layout_alignBottom="@+id/textViewHeight"
                android:layout_alignEnd="@+id/editTextAge"
                android:layout_alignRight="@+id/editTextAge"
                android:layout_marginEnd="29dp"
                android:layout_marginRight="29dp"
                android:layout_marginTop="9dp"
                android:text="Weight(kg)"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextWeight"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/editTextAge"
                android:layout_alignLeft="@+id/textViewWeight"
                android:layout_alignRight="@+id/editTextAge"
                android:layout_alignStart="@+id/textViewWeight"
                android:layout_below="@+id/textViewWeight"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Weight"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/errorInfo"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editTextFirstName"
                android:layout_alignStart="@+id/editTextFirstName"
                android:layout_below="@+id/editTextHeight"
                android:layout_marginTop="12dp"
                android:text="hello"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="10sp"></EditText>


            <android.support.v7.widget.CardView
                android:id="@+id/cardViewUpdate"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="510dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="UPDATE"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="14sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>