    <EditText
        android:id="@+id/editTextHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Height"
        android:inputType="textPersonName"
        android:layout_below="@+id/textViewGendle"
        android:layout_alignLeft="@+id/textViewGendle"
        android:layout_alignStart="@+id/textViewGendle" />

    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Weight"
        android:inputType="textPersonName"
        android:layout_below="@+id/editTextHeight"
        android:layout_alignLeft="@+id/editTextHeight"
        android:layout_alignStart="@+id/editTextHeight" />

    <RadioGroup
        android:id="@+id/rgroup"
        android:layout_width="@android:dimen/notification_large_icon_width"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/textViewGendle"
        android:layout_alignEnd="@+id/editTextRetypePassword"
        android:layout_alignRight="@+id/editTextRetypePassword"
        android:layout_alignTop="@+id/textViewGendle"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textViewGendle"
        android:layout_toRightOf="@+id/textViewGendle">

        <RadioButton
            android:id="@+id/radioButtonF"
            android:onClick="rbClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioButtonM"
            android:layout_alignStart="@+id/radioButtonM"
            android:layout_below="@+id/editTextFirstName"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="F" />

        <RadioButton
            android:id="@+id/radioButtonM"
            android:onClick="rbClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editTextPassword"
            android:layout_alignBottom="@+id/editTextPassword"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/editTextPassword"
            android:layout_toStartOf="@+id/editTextPassword"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="M" />
    </RadioGroup>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewSubmit"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_below="@+id/editTextEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/textViewSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="REGISTER"
                android:textColor="@color/cardview_light_background"
                android:textSize="14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Email"
        android:inputType="textPersonName"
        android:layout_below="@+id/editTextWeight"
        android:layout_alignLeft="@+id/editTextWeight"
        android:layout_alignStart="@+id/editTextWeight" />


</RelativeLayout>