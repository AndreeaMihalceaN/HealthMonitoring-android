<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andreea.healthmonitoring.HomeActivity">

    <TextView
        android:id="@+id/textViewH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="333dp"
        android:layout_height="206dp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="79dp"
        android:layout_alignLeft="@+id/buttonFoodDiary"
        android:layout_alignStart="@+id/buttonFoodDiary" />

    <Button
        android:id="@+id/buttonFoodDiary"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="78dp"
        android:text="Food Diary"
        android:layout_below="@+id/piechart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonFoodSuggestion"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Food Suggestion"
        android:layout_alignBaseline="@+id/buttonFoodDiary"
        android:layout_alignBottom="@+id/buttonFoodDiary"
        android:layout_alignRight="@+id/piechart"
        android:layout_alignEnd="@+id/piechart" />

    <Button
        android:id="@+id/buttonConsulting"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="23dp"
        android:text="Consulting"
        android:layout_below="@+id/buttonFoodSuggestion"
        android:layout_alignLeft="@+id/buttonFoodDiary"
        android:layout_alignStart="@+id/buttonFoodDiary" />

    <Button
        android:id="@+id/buttonStartWalking"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/buttonFoodSuggestion"
        android:layout_alignStart="@+id/buttonFoodSuggestion"
        android:layout_alignTop="@+id/buttonConsulting"
        android:text="Start Walking" />

    <Button
        android:id="@+id/buttonNeareastHospital"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/buttonConsulting"
        android:layout_alignStart="@+id/buttonConsulting"
        android:layout_below="@+id/buttonConsulting"
        android:layout_marginTop="19dp"
        android:text="Neareast Hospital" />

    <Button
        android:id="@+id/buttonML"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="ML"
        android:layout_alignTop="@+id/buttonNeareastHospital"
        android:layout_alignLeft="@+id/buttonStartWalking"
        android:layout_alignStart="@+id/buttonStartWalking" />

</RelativeLayout>