<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/card_margin"
            android:elevation="3dp"
            card_view:cardCornerRadius="@dimen/card_album_radius">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Cherry">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="12dp"
                            app:srcCompat="@mipmap/ic_launcher" />


                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textViewCarbohydrates"
                            android:layout_alignStart="@+id/textViewCarbohydrates"
                            android:layout_alignTop="@+id/imageView"
                            android:text="Name"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"/>


                        <TextView
                            android:id="@+id/textViewCarbohydrates"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView"
                            android:layout_marginLeft="26dp"
                            android:layout_marginStart="26dp"
                            android:layout_toEndOf="@+id/imageView"
                            android:layout_toRightOf="@+id/imageView"
                            android:text="Carbohydrates:"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewCarbohydratesResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/textViewFats"
                            android:layout_marginLeft="34dp"
                            android:layout_marginStart="34dp"
                            android:layout_toEndOf="@+id/textViewCarbohydrates"
                            android:layout_toRightOf="@+id/textViewCarbohydrates"
                            android:text="TextView"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewFats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textViewCarbohydrates"
                            android:layout_alignStart="@+id/textViewCarbohydrates"
                            android:layout_below="@+id/textViewCarbohydrates"
                            android:text="Fats:"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewFatsResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textViewCarbohydratesResult"
                            android:layout_alignStart="@+id/textViewCarbohydratesResult"
                            android:layout_below="@+id/textViewCarbohydratesResult"
                            android:text="TextView"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewProteins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textViewFats"
                            android:layout_alignStart="@+id/textViewFats"
                            android:layout_below="@+id/textViewFats"
                            android:text="Proteins:"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewProteinsResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/textViewFatsResult"
                            android:layout_alignLeft="@+id/textViewFatsResult"
                            android:layout_alignRight="@+id/textViewFatsResult"
                            android:layout_alignStart="@+id/textViewFatsResult"
                            android:layout_below="@+id/textViewFatsResult"
                            android:text="TextView"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textViewProteins"
                            android:layout_alignStart="@+id/textViewProteins"
                            android:layout_below="@+id/textViewProteins"
                            android:text="Category:"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewCategoryResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textViewProteinsResult"
                            android:layout_alignStart="@+id/textViewProteinsResult"
                            android:layout_below="@+id/textViewProteinsResult"
                            android:text="TextView"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/textViewCategory"
                            android:layout_alignLeft="@+id/textViewCategory"
                            android:layout_alignRight="@+id/textViewCategory"
                            android:layout_alignStart="@+id/textViewCategory"
                            android:layout_below="@+id/textViewCategory"
                            android:text="Quantity:"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewQuantityResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textViewCategoryResult"
                            android:layout_alignStart="@+id/textViewCategoryResult"
                            android:layout_below="@+id/textViewCategoryResult"
                            android:text="TextView"
                            android:textColor="@color/colorWhite"/>

                        <ImageView
                            android:id="@+id/imageViewDelete"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignTop="@+id/textView"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/imageViewEditQ"
                            android:background="@drawable/icondelete" />

                        <ImageView
                            android:id="@+id/imageViewEditQ"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignBaseline="@+id/imageViewDelete"
                            android:layout_alignBottom="@+id/imageViewDelete"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/iconedit" />"

                </RelativeLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>