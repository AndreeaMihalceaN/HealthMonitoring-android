<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andreea.healthmonitoring.Activities.FoodDiaryActivity"
    android:background="@color/Light"

    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignTop="@+id/textViewTotalProteins"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="36dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="Date"
        android:textSize="18sp"
        android:textColor="@color/Black"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewTotalProteins"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="93dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="30dp"
        android:text="Date:"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"></ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textViewTotalCarbohydrates"
            android:layout_marginLeft="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total carbohydrates: "
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/textViewTotalFats"
            android:layout_marginLeft="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total fats: "
            android:layout_marginTop="20dp"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/textViewTotalProteins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="23dp"
            android:text="Total proteines: "
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textViewTotalCalories"
            android:layout_marginLeft="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total calories: "
            android:layout_marginTop="76dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textColor="@color/Black"/>
    </RelativeLayout>


</RelativeLayout>