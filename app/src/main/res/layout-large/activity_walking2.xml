<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.andreea.healthmonitoring.Activities.Walking2Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Steps"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_steps"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/cerclebackgroundlime"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/textViewDay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="320dp"
                android:textStyle="bold"
                android:text="Day1" />

            <TextView
                android:id="@+id/textViewDay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="320dp"
                android:textStyle="bold"
                android:text="Day2" />

            <TextView
                android:id="@+id/textViewDay3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="320dp"
                android:textStyle="bold"
                android:text="Day3" />

            <TextView
                android:id="@+id/textViewDay4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="320dp"
                android:textStyle="bold"
                android:text="Day4" />

            <TextView
                android:id="@+id/textViewToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="320dp"
                android:textStyle="bold"
                android:text="Today" />

            <TextView
                android:id="@+id/textViewResultDay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="350dp"
                android:text="0"
                android:textColor="@color/Cherry"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textViewResultDay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="350dp"
                android:text="0"
                android:textColor="@color/Cherry"
                android:textAlignment="center"
                android:layout_marginBottom="50dp"/>

            <TextView
                android:id="@+id/textViewResultDay3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="350dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/Cherry"
                android:layout_marginBottom="50dp"/>

            <TextView
                android:id="@+id/textViewResultDay4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="350dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/Cherry"
                android:layout_marginBottom="50dp"/>

            <TextView
                android:id="@+id/textViewResultToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="350dp"
                android:layout_marginBottom="50dp"
                android:text="0"
                android:textColor="@color/Cherry"
                android:textAlignment="center" />

            <com.jjoe64.graphview.GraphView
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:layout_marginTop="400dp"
                android:id="@+id/graph" />

            <Button
                android:id="@+id/personalRecord"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/LimeGreen"
                android:gravity="center"
                android:layout_marginTop="650dp"
                android:layout_marginBottom="40dp"
                android:text="Personal record" />

            <TextView
                android:id="@+id/verif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="730dp"
                android:layout_centerHorizontal="true"
                android:text=""/>


        </RelativeLayout>




    </ScrollView>

</RelativeLayout>