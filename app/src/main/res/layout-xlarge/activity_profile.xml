<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andreea.healthmonitoring.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewFirstName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:layout_centerHorizontal="true"
                android:text="First Name"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextFirstName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="200dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="First Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewLastName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="280dp"
                android:layout_centerHorizontal="true"
                android:text="Last Name"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextLastName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="320dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Last Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Email"
                android:layout_marginTop="400dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="440dp"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Email"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewContactNo"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="520dp"
                android:text="Contact No"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextContactNo"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="560dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Contact No"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewAge"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="640dp"
                android:text="Age"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextAge"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="680dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Age"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editTextAge"
                android:layout_marginTop="760dp"
                android:text="Height(cms)"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextHeight"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewHeight"
                android:ems="10"
                android:layout_marginTop="800dp"
                android:inputType="textPersonName"
                android:text="Height"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textViewHeight"
                android:layout_alignBottom="@+id/textViewHeight"
                android:layout_marginLeft="22dp"
                android:layout_toEndOf="@+id/editTextHeight"
                android:layout_toRightOf="@+id/editTextHeight"
                android:text="Weight(kgs)"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextWeight"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewWeight"
                android:ems="10"
                android:layout_marginTop="800dp"
                android:inputType="textPersonName"
                android:text="Weight"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/errorInfo"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="hello"
                android:layout_marginTop="880dp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"></EditText>


            <android.support.v7.widget.CardView
                android:id="@+id/cardViewUpdate"
                android:layout_width="400dp"
                android:layout_height="70dp"
                android:layout_below="@+id/errorInfo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="65dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="UPDATE"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="20sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>