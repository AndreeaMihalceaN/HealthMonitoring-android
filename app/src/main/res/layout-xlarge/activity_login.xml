<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andreea.healthmonitoring.LoginActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1000dp"
        android:layout_marginBottom="14dp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="425dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/ic_account_circle"
        android:ems="10"
        android:hint="Username"
        android:textSize="30dp"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="115dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="520dp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_lock_password"
        android:ems="10"
        android:hint="Password"
        android:textSize="30dp"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="180dp"/>

    <CheckBox
        android:id="@+id/checkBoxRememberMe"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="620dp"
        android:text="Remember me"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="245dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/buttonSignIn"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_marginTop="750dp"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        >

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="SIGN IN"
                android:gravity="center"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardSignUp"
        android:layout_width="400dp"
        android:layout_height="70dp"
        app:cardBackgroundColor="@color/colorForButton"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_marginTop="855dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="SIGN UP"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/cardview_light_background" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="350dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/logo_health"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

</RelativeLayout>