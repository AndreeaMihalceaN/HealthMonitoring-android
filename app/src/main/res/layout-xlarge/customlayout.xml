<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/card_margin"
            android:elevation="3dp"
            card_view:cardCornerRadius="@dimen/card_album_radius">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Cherry">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="190dp"
                            android:layout_height="190dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@mipmap/ic_launcher" />


                        <TextView
                            android:id="@+id/textView"
                            android:layout_marginLeft="250dp"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:layout_marginTop="30dp"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"/>


                        <TextView
                            android:id="@+id/textViewCarbohydrates"
                            android:layout_marginLeft="250dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carbohydrates:"
                            android:layout_marginTop="60dp"
                            android:textSize="22dp"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewCarbohydratesResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="450dp"
                            android:layout_marginTop="60dp"
                            android:text="TextView"
                            android:textSize="20dp"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewFats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fats:"
                            android:textSize="22dp"
                            android:layout_marginLeft="250dp"
                            android:layout_marginTop="80dp"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewFatsResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="450dp"
                            android:layout_marginTop="80dp"
                            android:text="TextView"
                            android:textSize="20dp"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewProteins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22dp"
                            android:layout_marginLeft="250dp"
                            android:layout_marginTop="100dp"
                            android:text="Proteins:"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewProteinsResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="450dp"
                            android:layout_marginTop="100dp"
                            android:text="TextView"
                            android:textSize="20dp"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22dp"
                            android:layout_marginLeft="250dp"
                            android:layout_marginTop="120dp"
                            android:text="Category:"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewCategoryResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="450dp"
                            android:layout_marginTop="120dp"
                            android:text="TextView"
                            android:textSize="20dp"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22dp"
                            android:layout_marginLeft="250dp"
                            android:layout_marginTop="140dp"
                            android:text="Quantity:"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/textViewQuantityResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="450dp"
                            android:layout_marginTop="140dp"
                            android:text="TextView"
                            android:textSize="20dp"
                            android:textColor="@color/colorWhite"/>

                        <ImageView
                            android:id="@+id/imageViewDelete"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_above="@+id/textViewCarbohydratesResult"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/ic_delete_black_24dp" />

                        <ImageView
                            android:id="@+id/imageViewEditQ"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_above="@+id/textViewCarbohydratesResult"
                            android:layout_alignLeft="@+id/textViewCarbohydratesResult"
                            android:layout_alignStart="@+id/textViewCarbohydratesResult"
                            android:background="@drawable/ic_edit_black_24dp" />"

                </RelativeLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>