<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andreea.healthmonitoring.Activities.EditAccountActivity">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="379dp"
        android:layout_height="380dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="-11dp"
        android:background="@drawable/bluee"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="77dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="78dp"
        android:id="@+id/relativeLayout2">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            app:srcCompat="@drawable/cerclebackgroundgreen"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="85dp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginTop="170dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/healthyuser"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="85dp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="630dp"
        android:drawableLeft="@drawable/ic_account_circle"
        android:ems="10"
        android:hint="Username"
        android:textSize="20dp"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="115dp" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="710dp"
        android:drawableLeft="@drawable/ic_lock_password"
        android:ems="10"
        android:hint="Password"
        android:textSize="20dp"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="180dp" />

    <EditText
        android:id="@+id/editTextRetypePassword"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="770dp"
        android:drawableLeft="@drawable/ic_lock_password"
        android:ems="10"
        android:hint="Reenter Password"
        android:textSize="20dp"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="180dp" />

    <EditText
        android:id="@+id/errorInfo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="840dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />


    <android.support.v7.widget.CardView
        android:id="@+id/buttonChageAutentificationDates"
        android:layout_width="430dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="940dp"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewChageAutentificationDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Change autentification dates"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
