<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andreea.healthmonitoring.FoodDiaryActivity"
    android:background="@color/Light"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignTop="@+id/textViewTotalProteins"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="36dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="Date"
        android:textSize="35sp"
        android:textColor="@color/Black"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="50dp"
        android:text="Date:"
        android:textColor="@color/colorPrimary"
        android:textSize="35sp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"></ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textViewTotalCarbohydrates"
            android:layout_marginLeft="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total carbohydrates: "
            android:layout_marginTop="60dp"
            android:textSize="20dp"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/textViewTotalFats"
            android:layout_marginLeft="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total fats: "
            android:layout_marginTop="190dp"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/textViewTotalProteins"
            android:layout_marginLeft="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total proteines: "
            android:textSize="20dp"
            android:layout_marginTop="130dp"
            android:textColor="@color/Black"/>
    </RelativeLayout>


</RelativeLayout>